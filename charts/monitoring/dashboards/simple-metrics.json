    "panels": [
        {
            "title": "Access Points",
            "type": "text",
            "gridPos": {
                "h": 6,
                "w": 24,
                "x": 0,
                "y": 0
            },
            "options": {
                "mode": "markdown",
                "content": "| Service | Local URL | User/Pass |\n|---|---|---|\n| **Grafana** | [http://localhost:30030](http://localhost:30030) | `admin` / `ticker` |\n| **Argo CD** | [https://localhost:8443](https://localhost:8443) | `admin` / *(check secret)* |\n| **Ticker UI** | [http://localhost:8080](http://localhost:8080) | - |\n| **Ticker API** | [http://localhost:30090/api/history/BTC-USD](http://localhost:30090/api/history/BTC-USD) | - |\n| **InfluxDB** | [http://localhost:8086](http://localhost:8086) | `admin` / `tickerpass123` |"
            }
        },
        {
            "title": "Cluster CPU Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 24,
                "x": 0,
                "y": 6
            },
            "targets": [
                {
                    "expr": "sum(rate(node_cpu_seconds_total{mode!=\"idle\"}[1m])) / sum(machine_cpu_cores) * 100",
                    "legendFormat": "Cluster CPU %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "unit": "percent"
                }
            }
        },
        {
            "title": "Cluster Memory Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 24,
                "x": 0,
                "y": 13
            },
            "targets": [
                {
                    "expr": "(sum(node_memory_MemTotal_bytes) - sum(node_memory_MemAvailable_bytes)) / sum(node_memory_MemTotal_bytes) * 100",
                    "legendFormat": "Cluster RAM %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "unit": "percent"
                }
            }
        },
        {
            "title": "CPU Usage per Pod",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 24,
                "x": 0,
                "y": 20
            },
            "targets": [
                {
                    "expr": "sum(rate(container_cpu_usage_seconds_total[1m])) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        },
        {
            "title": "Memory Usage per Pod",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 24,
                "x": 0,
                "y": 27
            },
            "targets": [
                {
                    "expr": "sum(container_memory_usage_bytes) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            }
        },
        {
            "title": "Network Traffic (RX)",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 24,
                "x": 0,
                "y": 34
            },
            "targets": [
                {
                    "expr": "sum(rate(process_network_receive_bytes_total[1m])) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "title": "Market Data: Total Count",
            "type": "stat",
            "datasource": {
                "type": "influxdb",
                "uid": "InfluxDB"
            },
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 0,
                "y": 41
            },
            "targets": [
                {
                    "query": "from(bucket: \"ticks\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] == \"ticks\" and r[\"_field\"] == \"price\") |> count()",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "continuous-GrYlRd"
                    },
                    "displayName": "${__field.labels.symbol}"
                }
            }
        },
        {
            "title": "Market Data: First Timestamp",
            "type": "stat",
            "datasource": {
                "type": "influxdb",
                "uid": "InfluxDB"
            },
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 8,
                "y": 41
            },
            "targets": [
                {
                    "query": "from(bucket: \"ticks\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] == \"ticks\" and r[\"_field\"] == \"price\") |> first() |> map(fn: (r) => ({ _value: time(v: r._time), symbol: r.symbol }))",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "dateTimeAsIso",
                    "color": {
                        "mode": "fixed",
                        "fixedColor": "blue"
                    },
                    "displayName": "${__field.labels.symbol}"
                }
            }
        },
        {
            "title": "Market Data: Last Timestamp",
            "type": "stat",
            "datasource": {
                "type": "influxdb",
                "uid": "InfluxDB"
            },
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 16,
                "y": 41
            },
            "targets": [
                {
                    "query": "from(bucket: \"ticks\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] == \"ticks\" and r[\"_field\"] == \"price\") |> last() |> map(fn: (r) => ({ _value: time(v: r._time), symbol: r.symbol }))",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "dateTimeAsIso",
                    "color": {
                        "mode": "fixed",
                        "fixedColor": "green"
                    },
                    "displayName": "${__field.labels.symbol}"
                }
            }
        },
        {
            "title": "PVC Storage Usage",
            "type": "table",
            "gridPos": {
                "h": 6,
                "w": 24,
                "x": 0,
                "y": 47
            },
            "targets": [
                {
                    "expr": "kubelet_volume_stats_used_bytes / kubelet_volume_stats_capacity_bytes * 100",
                    "legendFormat": "{{persistentvolumeclaim}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "orange",
                                "value": 70
                            },
                            {
                                "color": "red",
                                "value": 90
                            }
                        ]
                    },
                    "custom": {
                        "displayMode": "color-background"
                    }
                }
            }
        }
    ],
