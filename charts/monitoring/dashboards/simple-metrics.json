            }
        },
        {
            "title": "Cluster CPU Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 10
            },
            "targets": [
                {
                    "expr": "sum(rate(node_cpu_seconds_total{mode!=\"idle\"}[1m])) / sum(machine_cpu_cores) * 100",
                    "legendFormat": "Cluster CPU %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "unit": "percent"
                }
            }
        },
        {
            "title": "Cluster Memory Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 10
            },
            "targets": [
                {
                    "expr": "(sum(node_memory_MemTotal_bytes) - sum(node_memory_MemAvailable_bytes)) / sum(node_memory_MemTotal_bytes) * 100",
                    "legendFormat": "Cluster RAM %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "unit": "percent"
                }
            }
        },
        {
            "title": "CPU Usage per Pod",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 17
            },
            "targets": [
                {
                    "expr": "sum(rate(container_cpu_usage_seconds_total[1m])) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        },
        {
            "title": "Memory Usage per Pod",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 17
            },
            "targets": [
                {
                    "expr": "sum(container_memory_usage_bytes) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            }
        },
        {
            "title": "Network Traffic (RX)",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 24
            },
            "targets": [
                {
                    "expr": "sum(rate(process_network_receive_bytes_total[1m])) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "title": "Database Size",
            "type": "stat",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 24
            },
            "targets": [
                {
                    "expr": "sum(kubelet_volume_stats_used_bytes{persistentvolumeclaim=\"influxdb-data\", namespace=\"default\"}) or sum(container_fs_usage_bytes{namespace=\"default\", pod=~\".*influx.*\"})",
                    "legendFormat": "InfluxDB Database"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "orange",
                                "value": 1000000000
                            },
                            {
                                "color": "red",
                                "value": 5000000000
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Market Data: Total Count",
            "type": "stat",
            "datasource": {
                "type": "influxdb",
                "uid": "InfluxDB"
            },
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 0,
                "y": 31
            },
            "targets": [
                {
                    "query": "from(bucket: \"ticks\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] == \"ticks\" and r[\"_field\"] == \"price\") |> count()",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "continuous-GrYlRd"
                    },
                    "displayName": "${__field.labels.symbol}"
                }
            },
            "options": {
                "orientation": "horizontal",
                "textMode": "auto",
                "colorMode": "value",
                "graphMode": "area",
                "justifyMode": "auto"
            }
        },
        {
            "title": "Market Data: First Timestamp",
            "type": "stat",
            "datasource": {
                "type": "influxdb",
                "uid": "InfluxDB"
            },
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 8,
                "y": 31
            },
            "targets": [
                {
                    "query": "from(bucket: \"ticks\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] == \"ticks\" and r[\"_field\"] == \"price\") |> first() |> map(fn: (r) => ({ _value: uint(v: r._time) / uint(v: 1000000), symbol: r.symbol }))",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "dateTimeAsIso",
                    "color": {
                        "mode": "fixed",
                        "fixedColor": "blue"
                    },
                    "displayName": "${__field.labels.symbol}"
                }
            },
            "options": {
                "orientation": "horizontal",
                "textMode": "auto",
                "colorMode": "value",
                "graphMode": "area",
                "justifyMode": "auto"
            }
        },
        {
            "title": "Market Data: Last Timestamp",
            "type": "stat",
            "datasource": {
                "type": "influxdb",
                "uid": "InfluxDB"
            },
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 16,
                "y": 31
            },
            "targets": [
                {
                    "query": "from(bucket: \"ticks\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] == \"ticks\" and r[\"_field\"] == \"price\") |> last() |> map(fn: (r) => ({ _value: uint(v: r._time) / uint(v: 1000000), symbol: r.symbol }))",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "dateTimeAsIso",
                    "color": {
                        "mode": "fixed",
                        "fixedColor": "green"
                    },
                    "displayName": "${__field.labels.symbol}"
                }
            },
            "options": {
                "orientation": "horizontal",
                "textMode": "auto",
                "colorMode": "value",
                "graphMode": "area",
                "justifyMode": "auto"
            }
        }
    ],
