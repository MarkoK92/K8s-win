{
    "annotations": {
        "list": []
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 0,
    "id": null,
    "links": [],
    "panels": [
        {
            "title": "Cluster CPU Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(rate(node_cpu_seconds_total{mode!=\"idle\"}[1m])) / sum(machine_cpu_cores) * 100",
                    "legendFormat": "Cluster CPU %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "unit": "percent"
                }
            }
        },
        {
            "title": "Cluster Memory Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "(sum(node_memory_MemTotal_bytes) - sum(node_memory_MemAvailable_bytes)) / sum(node_memory_MemTotal_bytes) * 100",
                    "legendFormat": "Cluster RAM %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "unit": "percent"
                }
            }
        },
        {
            "title": "Running Pods & Resources",
            "type": "table",
            "gridPos": {
                "h": 10,
                "w": 24,
                "x": 0,
                "y": 7
            },
            "targets": [
                {
                    "expr": "sum by (pod, namespace) (rate(container_cpu_usage_seconds_total{image!=\"\"}[5m]))",
                    "format": "table",
                    "legendFormat": "CPU Cores"
                },
                {
                    "expr": "sum by (pod, namespace) (container_memory_usage_bytes{image!=\"\"})",
                    "format": "table",
                    "legendFormat": "RAM Usage"
                },
                {
                    "expr": "sum by (pod, namespace) (kube_pod_status_ready{condition=\"true\"})",
                    "format": "table",
                    "legendFormat": "Ready"
                },
                {
                    "expr": "sum by (pod, namespace) (kube_pod_container_status_restarts_total)",
                    "format": "table",
                    "legendFormat": "Restarts"
                },
                {
                    "expr": "sum by (pod, namespace) (rate(container_network_receive_bytes_total[5m]))",
                    "format": "table",
                    "legendFormat": "Net RX/s"
                }
            ],
            "transformations": [
                {
                    "id": "merge",
                    "options": {}
                },
                {
                    "id": "organize",
                    "options": {
                        "excludeByName": {
                            "Time": true
                        },
                        "renameByName": {
                            "Value #A": "CPU Cores",
                            "Value #B": "RAM",
                            "Value #C": "Ready",
                            "Value #D": "Restarts",
                            "Value #E": "Net RX/s"
                        }
                    }
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "displayMode": "auto",
                        "align": "auto"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            }
                        ]
                    }
                },
                "overrides": [
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "RAM"
                        },
                        "properties": [
                            {
                                "id": "unit",
                                "value": "bytes"
                            }
                        ]
                    },
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Net RX/s"
                        },
                        "properties": [
                            {
                                "id": "unit",
                                "value": "Bps"
                            }
                        ]
                    },
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Restarts"
                        },
                        "properties": [
                            {
                                "id": "thresholds",
                                "value": {
                                    "mode": "absolute",
                                    "steps": [
                                        {
                                            "color": "green",
                                            "value": 0
                                        },
                                        {
                                            "color": "red",
                                            "value": 1
                                        }
                                    ]
                                }
                            }
                        ]
                    },
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Ready"
                        },
                        "properties": [
                            {
                                "id": "mappings",
                                "value": [
                                    {
                                        "type": "value",
                                        "options": {
                                            "0": {
                                                "text": "Not Ready",
                                                "color": "red"
                                            },
                                            "1": {
                                                "text": "Running",
                                                "color": "green"
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "title": "Services & Ports",
            "type": "table",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 17
            },
            "targets": [
                {
                    "expr": "kube_service_info",
                    "format": "table",
                    "instant": true
                }
            ],
            "transformations": [
                {
                    "id": "organize",
                    "options": {
                        "excludeByName": {
                            "Time": true,
                            "Value": true
                        },
                        "renameByName": {}
                    }
                }
            ]
        },
        {
            "title": "PVC Storage Usage",
            "type": "table",
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 17
            },
            "targets": [
                {
                    "expr": "kubelet_volume_stats_used_bytes / kubelet_volume_stats_capacity_bytes * 100",
                    "legendFormat": "{{persistentvolumeclaim}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "orange",
                                "value": 70
                            },
                            {
                                "color": "red",
                                "value": 90
                            }
                        ]
                    },
                    "custom": {
                        "displayMode": "color-background"
                    }
                }
            }
        },
        {
            "title": "Network Traffic (Bytes/sec)",
            "type": "timeseries",
            "gridPos": {
                "h": 7,
                "w": 24,
                "x": 0,
                "y": 24
            },
            "targets": [
                {
                    "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"default\"}[1m])) by (pod)",
                    "legendFormat": "RX {{pod}}"
                },
                {
                    "expr": "sum(rate(container_network_transmit_bytes_total{namespace=\"default\"}[1m])) by (pod)",
                    "legendFormat": "TX {{pod}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        }
    ],
    "schemaVersion": 36,
    "style": "dark",
    "tags": [
        "simple",
        "detailed"
    ],
    "templating": {
        "list": []
    },
